mixin crearProyecto(proyecto={})
    


    form.agregar-proyecto(action=`/nuevo-proyecto/${proyecto.id || ''}` method="POST")
            .campo 
                label(for="nombre") Nombre Proyecto:
                if proyecto
                    input(type="text" id="nombre" name="nombre" placeholder="Nombre Proyecto" value=proyecto.nombre)
                else
                    input(type="text" id="nombre" name="nombre" placeholder="Nombre Proyecto")

            .campo.enviar    
                input(type="submit" value=`${proyecto.nombre ? 'Save' : 'Create'}` class="boton")
              
