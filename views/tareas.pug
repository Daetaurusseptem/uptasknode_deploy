extends layout

block content
    .contenido-principal
        h1 #{nombrePagina} - #{proyecto.nombre}
        

        form.agregar-tarea(action=`/proyectos/${proyecto.url}` method="POST")
            .campo
                label(for="tarea") Tarea:
                input.nombre-tarea(type="text" name="tarea" placeholder="Tarea")
            .campo.enviar
                input.boton.nueva-tarea(type="submit" value="agregar")
                

        .listado-pendientes
            ul
             if tareas.length
                each tarea in tareas
                    li.tarea(data-tarea=tarea.id)
                        p= tarea.tarea
                        .acciones
                            if tarea.estado
                                i.fa.fa-check-circle.completo
                            else
                                i.fa.fa-check-circle
                            i.fa.fa-trash
             else 
                li.tarea
                    p No hay tareas disponibles

                        
                            
                            

                    
                
                    

            

        // pre= vardump(proyecto)

        //Avance del proyecto
        .avance
            h2 Avance del proyecto
            #barra-avance.barra-avance
                #porcentaje.porcentaje

        // Acciones que se puden realizar

        .contenedor-acciones
        
            a( class="boton" href=`/proyecto/editar/${proyecto.id}`) Edit Project
            button#eliminar-proyecto(data-proyecto-url=proyecto.url type="button" class="boton eliminar" ) Delete